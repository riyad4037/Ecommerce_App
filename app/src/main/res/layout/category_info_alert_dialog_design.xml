<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_grey_Color">

    <ImageButton
        android:id="@+id/CategoryInfoEditButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="category info edit button"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_edit_note_24"
        android:textAlignment="center"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@id/CategoryInfoDeleteButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/CategoryInfoEditButtonTextView"
        />

    <ImageButton
        android:id="@+id/CategoryInfoDeleteButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="category info delete button"
        android:scaleType="fitXY"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_delete_24"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/CategoryInfoEditButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/CategoryInfoDeleteButtonTextView"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/CategoryInfoEditButtonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/CategoryInfoEditButton"
        app:layout_constraintTop_toBottomOf="@+id/CategoryInfoEditButton"
        app:layout_constraintEnd_toEndOf="@+id/CategoryInfoEditButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Edit"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>
        <TextView
        android:id="@+id/CategoryInfoDeleteButtonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/CategoryInfoDeleteButton"
        app:layout_constraintTop_toBottomOf="@+id/CategoryInfoDeleteButton"
        app:layout_constraintEnd_toEndOf="@+id/CategoryInfoDeleteButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Delete"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>