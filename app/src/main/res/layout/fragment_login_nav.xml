<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.LoginNavFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_grey_Color">

        <ImageView
            android:id="@+id/LoginNavAppLogoImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/baseline_image_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/LetsYouInTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Let's you in"
            android:textColor="@color/secondary_Color"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LoginNavAppLogoImageView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ContinueWithFacebookTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/outliner_tertiary"
            android:drawableLeft="@drawable/facebook"
            android:padding="10dp"
            android:text="Continue with Facebook"
            android:textAlignment="center"
            android:textColor="@drawable/clicked_color_change"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LetsYouInTextView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ContinueWithGoogleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/outliner_tertiary"
            android:drawableLeft="@drawable/google"
            android:padding="10dp"
            android:text="Continue with Google"
            android:textAlignment="center"
            android:textColor="@drawable/clicked_color_change"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ContinueWithFacebookTextView" />

        <View
            android:id="@+id/DividerView"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/secondary_Color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ContinueWithGoogleTextView"
            app:layout_constraintBottom_toTopOf="@+id/ContinueWithPasswordTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/DividerView"
            app:layout_constraintEnd_toEndOf="@id/DividerView"
            app:layout_constraintTop_toTopOf="@+id/DividerView"
            app:layout_constraintBottom_toBottomOf="@+id/DividerView"
            android:text="OR"
            android:textColor="@color/secondary_Color"
            android:textSize="26sp"
            android:textStyle="bold"
            android:background="@color/background_grey_Color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ContinueWithPasswordTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/solid_tertiary"
            android:padding="10dp"
            style="@style/Widget.MaterialComponents.Button"
            android:text="Sign in with password"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DividerView"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>